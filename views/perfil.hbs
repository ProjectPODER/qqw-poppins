<section class="profile" id="informacion-general">
  <div class="row">
    <div class="content">
      <div class="col-9 col-m-9">
        <div class="col-6 col-m-6 mb-2">
          <h4 class="description-data-subtitle">INFORMACIÓN GENERAL</h4>
        </div>
        <div class="col-m-6 col-6 mb-2 right-align">
            {{#ifCond result.compiledRelease.contract_amount.supplier '&&' result.compiledRelease.contract_amount.buyer}}
