<div class="index-list-item">
    <div class="index-list-group">
      <div class="index-list-title">
        <a href="/{{get_type_url collection}}/{{result.id}}">
          {{!-- PERSONAS --}}
          {{# ifCond collection "==" "persons" }}
            <i class="fas fa-user"></i>
            {{result.name}}
          {{/ifCond}}
          {{# ifCond collection "==" "contracts" }}
            <i class="fas fa-user"></i>
            {{result.awards.0.title}}
          {{/ifCond}}
          {{# ifCond collection "==" "companies" }}
            <i class="fas fa-user"></i>
            {{result.name}}
          {{/ifCond}}
          {{# ifCond collection "==" "institutions" }}
            <i class="fas fa-user"></i>
            {{result.name}}
          {{/ifCond}}
          {{# ifCond collection "==" "countries" }}
            <i class="fas fa-user"></i>
            {{result.name}}
          {{/ifCond}}
          {{# ifCond collection "==" "persons" }}
            <i class="fas fa-user"></i>
            {{result.name}}
          {{/ifCond}}
        </a>
      </div>
      <div class="index-list-elements">
        {{!-- PERSONAS --}}
        {{# ifCond collection "==" "persons" }}
          <div class="left-elements">
            <p class="index-list-element"><i class="fas fa-dolly"></i> Proveedor con <i class="fas fa-file-alt"></i> {{contract_count.supplier}} contrato(s) de <i class="fas fa-dollar-sign"></i> {{format_amount contract_amount.supplier}} MXN</p>
          </div>
          <div class="right-elements">
            {{#if gender }}
            <p class="index-list-element">
              <i class="fas fa-mars"></i>
              {{gender}}
            </p>
            {{/if}}
          </div>
        {{/ifCond}}

        {{!-- CONTRATOS --}}
        {{# ifCond collection "==" "contracts" }}
        <div class="left-elements">
          <a href="">
            <p class="index-list-element"><i class="fas fa-landmark"></i> Nombre de dependencia</p>
          </a>
          <a href="">
            <p class="index-list-element"><i class="fas fa-dolly"></i> Nombre de proveedor</p>
          </a>
        </div>
        <div class="right-elements">
          <p class="index-list-element"><i class="fas fa-dollar-sign"></i> 12,200MXN</p>
          <p class="index-list-element"><i class="fas fa-calendar-alt"></i> 28/10/2016 al 03/12/2018</p>
          <p class="index-list-element"><i class="fas fa-clipboard-list"></i> Licitación</p>
        </div>
        {{/ifCond}}

        {{!-- EMPRESAS --}}
        {{# ifCond collection "==" "companies" }}
        <div class="left-elements">
          <p class="index-list-element"><i class="fas fa-dolly"></i> Proveedor con <i class="fas fa-file-alt"></i> 72 contrato(s) de <i class="fas fa-dollar-sign"></i> 12,200MXN</p>
        </div>
        <div class="right-elements">
          <a href="">
            <p class="index-list-element"><i class="fas fa-chart-line"></i> Nombre de la bolsa de valores</span></p>
          </a>
        </div>
        {{/ifCond}}

        {{!-- INSTITUCIONES --}}
        {{# ifCond collection "==" "institutions" }}
        <div class="left-elements flex-column">
          <p class="index-list-element"><i class="fas fa-dolly"></i> Proveedor con <i class="fas fa-file-alt"></i> 72 contrato(s) de <i class="fas fa-dollar-sign"></i> 12,200MXN</p>
          <p class="index-list-element"><i class="fas fa-money-check-alt"></i> Comprador con <i class="fas fa-file-alt"></i> 72 contrato(s) de <i class="fas fa-dollar-sign"></i> 12,200MXN</p>
        </div>
        {{/ifCond}}

        {{!-- PAISES --}}
        {{# ifCond collection "==" "countries" }}
        <div class="left-elements">
          <p class="index-list-element"><i class="fas fa-users"></i> {{format_number compiledRelease.summaries.persons_count}} <span>personas</span></p>
          <p class="index-list-element"><i class="fas fa-building"></i> {{format_number compiledRelease.summaries.companies_count}} <span>empresas</span></p>
          {{# if compiledRelease.summaries.states_count }}
          <p class="index-list-element"><i class="fas fa-map-marked"></i> {{format_number compiledRelease.summaries.states_count}} <span>estados</span></p>
          {{/if }}
        </div>
        <div class="right-elements">
          <a href="/paises/{{id}}#genero">
            <p class="index-list-element"><i class="fas fa-chart-line"></i> {{format_number  compiledRelease.summaries.stock_exchanges_count }} <span>Bolsa de Valores</span></p>
          </a>
          <a href="/paises/{{id}}/mujeresenlabolsa">
            <p class="index-list-element"><i class="fas fa-hashtag"></i> {{format_number compiledRelease.summaries.mujeres_ranking }} <span>posición en ranking</span></p>
          </a>
        </div>
        {{/ifCond}}
      </div>

    </div>
    <div class="index-list-button">
        <a href="/{{get_type_url collection }}/{{id}}"><i class="far fa-arrow-alt-circle-right"></i></a>
    </div>
</div>
<hr class="hr-index">
