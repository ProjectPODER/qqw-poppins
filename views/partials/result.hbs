<div class="index-list-item">
    <div class="index-list-group">
      <div class="index-list-title">
        <a href="/{{get_type_url collection}}/{{ or result.ocid result.id }}">
          <p class="text-overflow" title="{{or result.name result.compiledRelease.contracts.0.title}}">
            {{{ get_classification_icon collection (or result.compiledRelease.classification result.details.type) result.compiledRelease.subclassification result.compiledRelease.govLevel}}}
            {{or result.name result.title}}
          </p>
        </a>
      </div>
      <div class="index-list-elements">
        {{!-- PERSONAS --}}
        {{#ifCond collection "==" "persons" }}
          <div class="left-elements col-lg-8 col-md-8 col-md-8 col-sm-8 col-8">
            <div class="col-lg-12 p-0">
              {{> result-contracts this }}
            </div>
          </div>
          <div class="right-elements col-lg-4 col-md-4 col-md-4 col-sm-4 col-4">
            {{#if gender }}
            <div class="col-lg-6 p-0">
              <p class="index-list-element">
                <i class="fas fa-mars"></i>
                {{gender}}
              </p>
            </div>
            {{/if}}
            {{#if area }}
            <div class="col-lg-6 p-0">
              <p class="index-list-element">
                <i class="fas fa-flag"></i>
                <a href="/paises/{{area.id}}">{{area.name}}</a>
              </p>
            </div>
            {{/if}}
          </div>
        {{/ifCond}}

        {{!-- CONTRATOS --}}
        {{#ifCond collection "==" "contracts" }}
          <div class="left-elements col-lg-7 col-md-7 col-md-7 col-sm-7 col-7">
            <div class="col-lg-6 p-0">
              <p class="index-list-element" title="Comprador">
                {{#with (get_party this compiledRelease.parties.0.id)}}
                {{#if memberOf.0.id }}
                    <a href="/{{get_type_url details.type }}/{{memberOf.0.id}}" title="{{memberOf.0.name}}">
                      {{{get_classification_icon "institutions" details.type details.classification details.subclassification details.govLevel }}}
                        {{{hilight ../../filter_values.dependencia.value memberOf.0.name}}}
                    </a>
                  {{else}}
                    <a href="/{{get_type_url details.type }}/{{id}}" title="{{name}}">
                      {{{get_classification_icon "institutions" details.type details.classification details.subclassification details.govLevel }}}
                        {{{hilight ../../filter_values.dependencia.value name}}}
                    </a>
                  {{/if}}
                {{/with}}
              </p>
            </div> 
            <div class="col-lg-6 p-0">
              <p class="index-list-element" title="Proveedor">
                {{#with (get_party this result.compiledRelease.awards.[0].suppliers.[0].id) }}
                  <a href="/{{get_type_url details.type }}/{{id}}" title="{{name}}">
                      {{{get_classification_icon details.type details.classification details.subclassification details.govLevel }}}
                      {{name }} 
                    {{#ifCond result.supplier_count ">" 1 }}
                      (y {{result.supplier_count}} mas)
                    {{/ifCond}}
                  </a>
                {{/with}}
              </p>
            </div>
          </div>
          <div class="right-elements col-lg-5 col-md-5 col-md-5 col-sm-5 col-5">
            <div class="col-lg-5 p-0">
              <p class="index-list-element" title="{{format_amount result.compiledRelease.total_amount}} {{format_currency result.compiledRelease.contracts.0.value.currency}}">
                <i class="fas fa-dollar-sign"></i> 
                  {{format_amount result.compiledRelease.total_amount}} {{format_currency result.compiledRelease.contracts.0.value.currency}}
              </p>
            </div>
            <div class="col-lg-5 p-0">
              <p class="index-list-element" title="{{moment result.startDate date lang="es" format="L"}} al {{moment result.endDate date lang="es" format="L"}}">
                <i class="fas fa-calendar-alt" title="Fecha"></i> 
                  {{moment result.startDate date lang="es" format="L"}} al {{moment result.endDate date lang="es" format="L"}}
              </p>
            </div>
            <div class="col-lg-2 p-0">
              <p class="index-list-element" title="{{result.compiledRelease.tender.procurementMethod}}">
                <i class="fas fa-clipboard-list" title="Tipo de procedimiento"></i> 
                  {{result.compiledRelease.tender.procurementMethod}}
              </p>
            </div>
          </div>
        {{/ifCond}}

        {{!-- EMPRESAS --}}
        {{#ifCond collection "==" "companies" }}
          <div class="left-elements col-lg-8 col-md-8 col-md-8 col-sm-8 col-8">
            <div class="col-lg-12 p-0">
             {{> result-contracts this }}
            </div>
          </div>
          <div class="right-elements col-lg-4 col-md-4 col-md-4 col-sm-4 col-4">
            <div class="col-lg-7 p-0">
              <p class="index-list-element">
                <a href="">
                  <i class="fas fa-chart-line"></i> Nombre de la bolsa de valores</a>
              </p>
            </div>
            {{#if area }}
            <div class="col-lg-5 p-0">
              <p class="index-list-element">
                <a href="/paises/{{area.0.id}}"><i class="fas fa-flag"></i> {{ area.0.name }}</a>
              </p>
            </div>
            {{/if}}
          </div>
        {{/ifCond}}

        {{!-- INSTITUCIONES --}}
        {{#ifCond collection "==" "institutions" }}
          <div class="full-elements">
             {{> result-contracts this }}
          </div>
        {{/ifCond}}

        {{!-- PAISES --}}
        {{# ifCond collection "==" "countries" }}
          <div class="left-elements col-lg-7 col-md-7 col-md-7 col-sm-7 col-7">
            <div class="col-lg-4 p-0">
              <p class="index-list-element">
                <a href="?collection=persons&pais={{id}}">
                <i class="fas fa-users"></i> {{format_number summaries.persons_count}} personas
                </a>
              </p>
            </div>
            <div class="col-lg-4 p-0">
              <p class="index-list-element">
                <a href="?collection=companies&pais={{id}}">
                  <i class="fas fa-building"></i> 
                  {{format_number summaries.companies_count}} empresas
                </a>
              </p>
            </div>
            {{# if compiledRelease.summaries.states_count }}
            <div class="col-lg-4 p-0">
              <p class="index-list-element"><i class="fas fa-map-marked"></i> {{format_number summaries.states_count}} <span>estados</span>
              </p>
            </div>
            {{/if }}
          </div>
          <div class="right-elements col-lg-5 col-md-5 col-md-5 col-sm-5 col-5">
            <div class="col-lg-6 p-0">
              <p class="index-list-element">
                <a href="/paises/{{id}}#genero">
                  <i class="fas fa-chart-line"></i> {{format_number  summaries.stock_exchanges_count }} <span>Bolsa de Valores</span>
                </a>
              </p>
            </div>
            <div class="col-lg-6 p-0">
              <p class="index-list-element">
                <a href="/paises/{{id}}/mujeresenlabolsa">
                  <i class="fas fa-hashtag"></i> {{format_number summaries.mujeres_ranking }} 
                  <span>posici√≥n en ranking</span>
                </a>
              </p>
            </div>
          </div>
        {{/ifCond}}
      </div>
    </div>
    <div class="index-list-button">
        <a href="/{{get_type_url collection }}/{{ or result.ocid result.id }}"><i class="far fa-arrow-alt-circle-right"></i></a>
    </div>
</div>
<hr class="hr-index">
