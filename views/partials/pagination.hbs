<div class="container-fluid pt-5 pb-5 pagination-container">
  <div class="row">
    <div class="col-md-3 col-sm-12 page-break">
      <h6>SALTAR A LA PÁGINA</h5>
      <div class="input-group mb-3 w-50">
        <input type="text" class="form-control" placeholder="Número" id="page-jump">
        <div class="input-group-append">
          <button class="btn btn-secondary" type="submit"  onclick="window.location.href='{{url page="!!page!!" }}'.replace('!!page!!',parseInt($('#page-jump').val())-1)">IR</button>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-sm-12 text-center">
      <h6>PÁGINAS</h5>
      <ul class="pagination justify-content-center">
          {{#each pagesArray}}
              {{#ifCond type "==" "next5"}} <li class="page-item"><span class="page-ellipsis">&hellip;</span></li> {{/ifCond}}
              {{#ifCond type "==" "next10"}} <li class="page-item"><span class="page-ellipsis">&hellip;</span></li> {{/ifCond}}
              <li class="page-item {{#if enabled}}{{else}}disabled{{/if}} {{#ifCond type "==" "current"}}active{{else}}{{/ifCond}}">
                <a class="page-link page-{{type}}" {{#if enabled}}href="{{ url page=value}}"{{/if}}>
                  {{title}}
                </a>
              </li>
              {{#ifCond type "==" "prev5"}} <li class="page-item"><span class="page-ellipsis">&hellip;</span></li> {{/ifCond}}
              {{#ifCond type "==" "prev10"}} <li class="page-item"><span class="page-ellipsis">&hellip;</span></li> {{/ifCond}}
          {{/each}}
      </ul>
    </div>
    <div class="col-md-3 col-sm-12 text-right page-results">
      <h6>{{_ "RESULTADO POR PÁGINA" }}</h5>
      <div class="form-group">
        <select class="form-control float-right w-50" id="indexLength" onchange="window.location.href='{{url size="!!size!!" }}'.replace('!!size!!',this.value)">
          <option value="25" {{#ifCond result.size "==" "25" }}selected="selected"{{/ifCond}}>25</option>
          <option value="50" {{#ifCond result.size "==" "50" }}selected="selected"{{/ifCond}}>50</option>
          <option value="100" {{#ifCond result.size "==" "100" }}selected="selected"{{/ifCond}}>100</option>
        </select>
      </div>
    </div>
  </div>
</div>