<div class="container">
  <div class='viewWrapper'>
    <div class='datos-generales clearfix'>
      <div class="gd-col-left-wrapper col-m-12">
        {{#if result.name }}
          <div class="description-data-name">
            <h3><img src="../images/icons/persona-gray.svg" alt="Ícono persona" class="icon-lf icon-lf-person">{{result.name}}</h3>
            <h4 class="person-type">
              {{#if result.gender }}
                {{#ifCond result.gender '==' "Male" }}
                Empresario
                {{else}}
                Empresaria
                {{/ifCond}}
              {{else}}
              Empresario(a)
              {{/if}}
            </h4>
          </div>
          <hr>
        {{/if}}
      </div>

      {{#if result.memberships }}
        <div class="col-m-12">
          <h4 class="description-data-subtitle">EMPRESAS</h4>
        </div>
        <div class="col-m-12 mb-3">
          <table class="table table-responsive">
            <thead>
              <tr>
                <th class="description-data-subname">Nombre</th>
                <th class="description-data-subname">Rol</th>
              </tr>
            </thead>
            <tbody>
              {{#each result.memberships }}
              <tr>
                <td class="description-data-organization">
                  <img src="../images/icons/organizacion-blue.svg" alt="" class="icon-lf icon-lf-organization">
                  <a href="/orgs/{{sob_org}}">{{sob_org}}</a>
                </td>
                <td class="description-data-rol">{{role}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      {{/if}}

      {{!-- <div class="col-m-12 col-12 {{#if contracts.length }}hidden{{else}}{{#if ocds_contract_count }}{{else}}hidden{{/if}}{{/if}}">
        Cargando contratos...
      </div> --}}
      {{#if result.suppliesContracts }}
        <div class="col-m-12">
          <h4 class="description-data-subtitle">CONTRATOS</h4>
        </div>
        <div class="col-m-12 mb-3">
          <table class="table table-responsive">
            <thead>
              <tr>
                <th class="description-data-subname">Nombre</th>
                <th class="description-data-subname">Importe</th>
                <th class="description-data-subname">Periodo</th>
              </tr>
            </thead>
            <tbody>
              {{#each (limit result.suppliesContracts 3) }}
              <tr>
                <td class="description-data-contract">
                  <img src="../images/icons/contrato-blue.svg" alt="Ícono contrato" class="icon-lf icon-lf-contract">
                  <a href="/contracts/{{ocid}}?supplier={{suppliers_person}}">{{title}}</a>
                </td>
                <td class="description-data-amount">{{format_amount amount }} {{currency}}</td>
                <td class="description-data-date">{{moment start_date date format="YYYY"}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <div class="col-m-9 mb-3">
          {{#ifCond result.ocds_contract_count '>' 3}}
            <p>Viendo los 3 contratos más importantes de <strong>{{result.ocds_contract_count}} contratos en total</strong>. </p>
            <div class="col-m-3 centered contract-button">
              <a href="/contracts?supplier={{result.simple}}" class="button-link">Ver todos los contratos</a>
            </div>
          {{else}}
            <p>Viendo <strong>{{result.ocds_contract_count}} contrato(s) en total</strong>. </p>
          {{/ifCond}}
          <!-- <table class="table table-responsive">
            <thead>
              <tr>
                <th class="description-data-subname">Cantidad</th>
                <th class="description-data-subname">Importe total</th>
                <th class="description-data-subname">Períodos</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="description-data-contract">{{contract_count}}</td>
                <td class="description-data-amount">{{total_contract_amount}}</td>
                <td class="description-data-date">{{contract_periods}}</td>
              </tr>
            </tbody>
          </table> -->
        </div>
        {{!-- {{else}}
        <div class="col-m-9">
          <p>
            No hay contratos para mostrar.
          </p>
        </div> --}}
      {{/if}}

      <!-- <div class="col-m-12">
        <h4 class="description-data-subtitle">GRÁFICO DE RELACIONES</h4>
      </div> -->
    </div>

    {{#if address }}
      <div class="address clearfix">
        <h3 class="detail_header">Dirección</h3>
        <table class="table">
          <tbody>
            {{#each address }}
              <tr>
                <td>{{name }}</td>
                <td>{{value}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{/if}}
  </div>
</div>
