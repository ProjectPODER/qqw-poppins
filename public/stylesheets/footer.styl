footer
  background-color #21018b
  padding 3rem 0 3rem 5rem
  clear both
  // flex-shrink 0
  // position absolute
  // right 0
  // left 0
  // bottom 0
  // width 100%
  p
    color #fff
    line-height 1.5rem
    &:first-child
      margin-top 2rem
  a
    color #fff
    -webkit-transition all .35s
    -moz-transition all .35s
    transition all .35s
    &:hover
    &:focus
      color #ccd
      text-decoration none
    img
      margin-top 1rem
      margin-right 1rem
    .logofooter-ml
      width 80px
    .logofooter-pl
      width 120px

.owl-carousel
  margin-left -30px
  margin-bottom 20px
  z-index 0 !important
  .owl-nav
    text-align left
    margin-left 110px
    margin-top 10px
    button[class*='owl-']
        color white
        font-size 1rem
        margin 5px
        padding 4px 7px
        background transparent
        -webkit-transition all .35s
        -moz-transition all .35s
        transition all .35s
        opacity 0.6
        &:hover
        &:focus
          color #ccd
          background-color transparent

.logos-orgs
  background-position center center
  background-repeat no-repeat
  background-size contain
  margin 30px 20px 0
  height 50px
  width 200px
.logo-wingu
    background-image url('../images/wingu-blanco.png')
    height 35px
.logo-ojopublico
    background-image url('../images/logo-ojopublico-blanco.png')
    height 30px
.logo-cargo
    background-image url('../images/cargografias.png')
.logo-ml
    background-image url('../images/mexicoleaks.png')
    height 35px