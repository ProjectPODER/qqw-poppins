        display -ms-flexbox
        display flex
        -webkit-box-orient vertical
        -webkit-box-direction normal
        -webkit-flex-direction column
        -ms-flex-direction column
        flex-direction column
    .filters
        .filter-dropdown-menu, .dropdown-menu-morefilters
            width: calc(100% - 10px) !important

@media screen and (max-width: 590px)
    .emphasis-color-text
        font-size: 0.8rem
    .filters
        .filter-title
            font-size: 0.7rem
        .filter-selected.simple
            font-size 0.8rem
            margin-top -4px
        .filter-title.dropdown-tools, .filters .filter-title-simple.dropdown-tools
            font-size 0.7rem
            .icon-tools
                font-size 1.3rem
        .nav-item.general-filters
            margin-left 0
            max-width none
            min-width auto
    .collection-title
        font-size 1.5rem

@media (min-width: 576px)
    .filters
        .form-inline .form-control
            width 50%

@media (max-width: 576px)
    .error, .results-list, .sources-list
        padding-left 0
        padding-right 0
    .index-list-title a
        font-size 0.9rem

@media screen and (max-width: 492px)
    .results-items
        display none
    .nav-item.more-filters-dropdown
        margin-left 0
        max-width none
        min-width auto
    .error, .results-list
        padding-top: 9rem

@media screen and (max-width: 364px)
    .filters
        .filter-selected.simple
            font-size 0.6rem
            margin-top -4px
        .filter-title.dropdown-tools, .filters .filter-title-simple.dropdown-tools
            font-size 0.6rem
            .icon-tools
                font-size 1.2rem
        .nav-link.dropdown-tools
            padding: 0.5rem
        .nav-item
            margin-bottom: 0
    .collection-title
        font-size 1.2rem
    .error, .results-list
