// FILTERS
.filters-shadow
        -webkit-box-shadow: 0px 4px 10px -3px #d7d7d7;
        -moz-box-shadow: 0px 4px 10px -3px #d7d7d7;
        box-shadow: 0px 4px 10px -3px #d7d7d7;

.filters
    position fixed
    top 57px
    z-index 1
    width 100%
    padding-top 0
    padding-bottom 0
    .collection-filter
        border: 1px solid #370bc2
        border-radius 3px
        background: #eef
        margin-top: 5px
        margin-bottom: 4px !important
        a span
            font-weight: bold
        &.show a, a:hover
            background-color: #d4ccfd !important

    .nav-item
        margin-left 10px
        margin-bottom 10px
        max-width 150px
        text-align left
        min-width 100px
    .sortDirection-filter
        min-width auto !important
    .dropdown-menu-morefilters
        border 1px solid rgba(0,0,0,.15)
        background-color #e6e6e6
        width calc(100% - 607px)
        position absolute
        left 5px
        padding 11px 10px 0
        // max-height calc(100vh - 140px)
        overflow auto
        margin-left: 109px
        .selection-filter-box
            max-width: none
            overflow visible
            display none
            .filter-selected
                display none
            &.with-value
                margin: 0 0 0.5rem 1rem;
                display inline-block !important
                .filter-selected
                    display inline
                .dropdown-menu
                    margin-top -22px !important
        .filter-title
            font-weight: bold
            border-bottom: none !important
            justify-content: flex-start !important

        .dropdown-menu
            transform: none !important
            position static !important
            width 100% !important
            background-color #e6e6e6
            border none !important
            padding 0 !important
            margin-bottom 1em
            h6
                display none
        .nav-item
            max-width none
            width calc(100% - 20px)
            border-bottom 4px solid
            border-color white
            overflow hidden
        .nav-link
            padding: .5rem 0rem
        p.ml-2, fieldset.ml-2
            margin-left: 0 !important
        input.input-string
            margin-left: 0 !important
        .tt-menu
            position relative !important

    .type-filter
        border-right 3px solid $main-color
        margin-left 0
    .filter-dropdown
        position static !important
    .filter-dropdown-menu
        margin-top 0px !important
        width calc(100% - 125px)!important
        background-color #e6e6e6
        padding 1rem

        // text-align center
    .filter-dropdown-item
        white-space normal
        p
            margin 0
    .filter-type-description
        font-size 0.7em
    .filter-dropdown-item.active, .filter-dropdown-item:active
        color #16181b
        background-color #f8f9fa
    .dropdown-toggle::after
        display none
        // font-family "Font Awesome 5 Free"
        // font-weight 900
        // content "\f078"
        // border none
        // position: absolute;
        // right: 4px;
    .dropdown-tools::after
        display none
    .icon-tools
        font-size 1.7rem
        margin-top 5px
    .dropdown-divider
        border-top 1px solid #ffffff
    .filter-title, .filter-title-simple
        color $light-text-color
        font-size 0.8rem
        border-radius 0
        border-bottom 2px solid transparent
        overflow hidden
        white-space nowrap
        text-overflow ellipsis !important
        text-transform uppercase
        position relative
        &.dropdown-tools
            display block
    .filter-title
        display flex
        width 100%
        align-items center
        justify-content space-between
        span
            overflow hidden
            white-space nowrap
            text-overflow ellipsis !important
        i
            margin-left 2px

    .filter-title-simple
        display block
        padding 0.5rem 1rem
        margin 0
    .filter-selected
        &.simple
            padding 4px 1rem
            overflow hidden
            white-space nowrap
            text-overflow ellipsis
            max-width 200px
            // display flex !important
            // align-content center !important
    .filter-title:hover
        background-color #e6e6e6
    .nav-pills .show > .nav-link
        color #595959
        background-color #e6e6e6
        border-bottom 2px solid #4d4d4d
    .filter-item
        padding 0.25rem 1.5rem
    .btn-filter-states
        background-color #ffffff !important

    input.input-string
        width 70%
        // margin-left 0.5rem
        margin-right 0.5rem
        display inline-block
    input.input-minmax
        width 200px !important
        margin-left 0.5rem
    input.input-date
        width 200px !important
        margin-right 0.5rem
        padding 5px
        // background-image url(../images/calendar.png)
        // background-repeat no-repeat
        // background-position 6px
        border-width 1px
        border-color #d3d3d3
        border-style solid

    //Hide all filters, then show only filters ofr the current collection
    .filter-element
      display none

    .filter-collection-all
      display block

    ul.filter-active-collection-all .filter-collection-all-only
      display block

    ul.filter-active-collection-companies .filter-collection-companies
      display block

    ul.filter-active-collection-contracts .filter-collection-contracts
      display block

    ul.filter-active-collection-institutions .filter-collection-institutions
      display block

    ul.filter-active-collection-persons .filter-collection-persons
      display block

    ul.filter-active-collection-areas .filter-collection-areas
      display block

    ul.filter-active-collection-products .filter-collection-products
      display block

    // .left-box
    //     overflow hidden
    //     width calc(100% - 400px)
    //     #filtersList
    //         // flex-wrap nowrap
    .show_all_options
        color: $blue
        border-color: $blue
        &:hover
            background-color: $blue !important
            color: #ffffff

    .filter-line
        background-color: #cacaca

.selector-filter-type
    padding 4px 8px 2px
    font-weight bold
    max-width 140px
    p
        overflow hidden
        white-space nowrap
        text-overflow ellipsis

.selection-filter-box
    background-color #e6e6e6
    padding 4px 8px 2px
    overflow hidden
    // white-space nowrap
    text-overflow ellipsis
    max-width 200px
    display: flex !important;
    align-content center!important

.with-value
    background-color $darkblue
    color #ffffff
    .close
        color #ffffff
        margin-top -2px

.filter-selected
    overflow hidden
    white-space nowrap
    text-overflow ellipsis
    margin 1px 0 0

