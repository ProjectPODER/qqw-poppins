// RESPONSIVE VIEWS
@media screen and (max-width: 1270px)
    .index-list-elements
        .right-elements
            .area-shareholder
                right calc(60px + 15.5% * 1)
            .area-proveedor
                right calc(60px + 15% * 2)
            .area-boardmember
                right calc(60px + 15.5% * 3)
            .area-funcionario
                right calc(60px + 15% * 4)
            .area-institution
                right calc(60px + 15% * 5)

    .pagination-container
        .w-50
            width: 100% !important

@media screen and (max-width: 1200px)
    .filters
        .dropdown-menu-morefilters
            width 100%
            margin-left: 0

@media screen and (max-width: 991px)
    .filters
        top 56px
    .index-list-elements
        .right-elements
            padding-right: 20px
            .area-institution,
            .area-owner,
            .area-company,
            .area-proveedor,
            .area-person,
            .area-funcionario,
            .area-boardmember,
            .area-shareholder
                position static


