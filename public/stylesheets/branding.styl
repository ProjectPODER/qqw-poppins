body
  background-color #FFF
  overflow-x hidden
  margin 0
  font-family 'Montserrat', sans-serif
  font-size 14px
  line-height 1.42857143

html, body
  height 100%
  font-size 100%

*
  -webkit-box-sizing border-box
  box-sizing border-box

*:before,
*:after
  -webkit-box-sizing border-box
  box-sizing border-box

input,
button,
select,
textarea
  font-family inherit
  font-size inherit
  line-height inherit

a
  color #2b00f7
  text-decoration none
  -webkit-transition all .35s
  -moz-transition all .35s
  transition all .35s
  // font-weight bold
  &:focus
    outline thin dotted
    outline 5px auto -webkit-focus-ring-color
    outline-offset -2px

a:hover,
a:focus
  color #2d1c9d
  text-decoration underline


