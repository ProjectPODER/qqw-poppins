.error-template
.about-template
.privacy-template
  padding-top 5rem
  h1
    color #150b58
    font-size 2.5rem
    font-weight bold
    margin-bottom 2rem
    img
      width 50px
  h2
    color #150b58
    font-family monospace
    font-size 2.5rem
    text-transform uppercase
    margin-top 3rem
    margin-bottom 1.5rem
  h3
    color #150b58
    font-weight bold
    margin-top 2.5rem
  h4
    margin-top 1.5rem

.privacy-template
  h3
    font-weight: bold;
    color: #4e4e4e;
    text-transform: uppercase;


.apis-template
  .card
    margin-bottom 2rem
    padding-bottom: 2.5rem;
    .card-content
      padding 1rem 1rem 2.5rem 1rem
    p
      padding-top 0.5rem
      padding-bottom 1.5rem
    h3
      margin-top 1rem
      margin-bottom 1rem
      color #2B00F7
    .button-link
      color #fff
      -webkit-transition all .35s
      -moz-transition all .35s
      transition all .35s
      font-weight normal
      margin-right 1rem
      &:hover
      &:focus
        color #fff
    .link
      text-decoration underline !important
  .card-list
    position relative
    img
      width 90%
    p
      padding-bottom 0
  .subtitle-apis
    // margin-top -20px
    margin-bottom 40px
  .apis-bg
    background-image url('../images/apis-bg.png')
    height 460px
    background-size cover
    background-repeat no-repeat
    background-position center top
  .hr-apis
    background-color #bec8ff
  .apis-kibana
    height 150px
    background-image url('../images/apis-tlc.png')
    background-size cover
    background-repeat no-repeat
  hr
    margin-bottom 20px
  .button-link-apilist
    margin-right 0 !important
    // position absolute
    right 1rem
    bottom 0
  .card-software
    padding-bottom 0
  .card-post-blog
    padding 0.5rem
  .content-post-blog
    text-align center !important
    background-color #f7f7f7
    border solid 1px rgba(222, 222, 222, 0.3)
    padding 1rem
    h4
      margin 0
  .button-link-status-container
    text-align right
    margin-top 40px
    margin-bottom 40px
    .button-link-status
      font-weight: normal;
      border solid 1px #2B00F7
      color #2B00F7
      background-color transparent
      &:hover
        color #ffffff
        background-color #2B00F7

.about-template
  div
    &.proyecto
      background-color #f7f7f7
      padding 1rem
      width 100%
      margin-bottom 2rem
      position relative
      img
        width 90%
      p
        margin-right 1rem
        margin-bottom 3rem
        padding 1rem 1.5rem 0 0
        font-size 1.1rem

.about-sidebar
  position fixed
  // left 9%
  width 18%
  right auto
  margin-top 20px
  background-color #f7f7f7
  ul
    padding 1rem 2rem
    margin 0
    a
      text-decoration none !important
      font-weight bold
      transition none
      li
        list-style none
        padding 0.5rem 1rem
        -webkit-transition all .25s
        -moz-transition all .25s
        transition all .25s
        &:hover
        &:focus
        &.active
          background-color #2b00f7
          color #ffffff

.partners
  .media
    margin-bottom 3rem

.informe-iframe
  width 100%
  height 700px
  margin-top 40px
  display block


#left-sidebar
    display none
    background-color: #f7f7f7;
    border-color: #9c9c9c;
    border-width: 1px;
    border-style: solid;
    // text-align center
    color #3e3e3e

.button-manual
  &.right
    text-align right !important
    padding-right 1rem
  &.left
    text-align left !important

@media (max-width: 767px)
  #left-sidebar
    display block

@media (max-width: 767px)
//Home
  .button-manual
    &.right
      text-align center !important
      padding-right 0
    &.left
      text-align center !important


@media only screen and (max-width: 767px)
  .button-link-apilist
    position relative !important
    margin-top 1rem
  .apis-template
    .button-link-status-container
      text-align center
      margin-top 0
    h1
      font-size 2rem
    .card
      p
        margin-bottom 1.5rem
    .card-list
      img
        width 100%
    .card-software
      padding-bottom 0.5rem
      p
        margin-left 16px
      h3
        margin-left 16px
    #right-menu
      display none


@media only screen and (max-width: 768px)
  .button-link-apifirst
    margin-bottom 3rem
  .about-sidebar
    position initial
    width 100%
    ul a
      font-size 1 rem
  .about-sidebar
    display none
    &.open
        display block
        -webkit-animation fadeIn 1s
        animation fadeIn 1s

@media only screen and (max-width: 992px)
  .apis-template .card .link
    display block
    margin-top 2rem
  .about-sidebar
    position initial
    width 95%
    ul a
      font-size 0.8rem


@media only screen and (max-width: 1200px)
  .apis-template .card
    h3
      margin-right 1rem
    p
      margin-right 1rem


@media only screen and (max-width: 1160px)
  div
    &.explore-card
      width 100%
  .proyecto-info
    position relative
  .proyecto
    button
    a.proyecto-link
      width 85%
      bottom 0
      right 0
      display block
      text-align center
      margin auto

@media only screen and (max-width: 1042px)
  input[type=text].landing-search-inputtext
    width 100%
  input[type=submit].landing-search-inputtext
    width auto
    margin 0
  // .card-image
  //   display none
  .contacto
    button
      margin-left auto
  .explore-card
    button
      width 85%
  .investigaciones
    .card
      p
        font-size 1.4rem